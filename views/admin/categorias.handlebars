<h2> Lista de Categorias </h2>
<hr>
<a href="/admin/categorias/add">
<button type="button" class='btn btn-success'> Nova Categoria </button>
</a>

{{#each categorias}}
  <div class="card">
    <div class="card-header">
      <h4>{{nome}}</h4>
    </div>
    <div class="card-body">
      <small>Slug: {{slug}}</small> <br>
      <small>Adicionado em: {{criado_em}}</small> <br>
      <a href="/admin/categorias/edit/{{_id}}">
        <button class="btn btn-success mt-2" type="button" name="button"> Editar Categoria </button>
      </a>
      <form class="" action="/admin/categorias/delete" method="post">
        <input type="hidden" name="id" value="{{_id}}">
        <button class="btn btn-danger mt-2" type="submit" name="button"> Deletar Categoria </button>
      </form>

    </div>
  </div>
{{else}}
  <h3 class="mt-4"> Nenhuma categoria adicionada </h3>
{{/each}}
