  <div class="alert alert-danger">
    {{texto}}
  </div>
{{else}}

{{/each}}

<div class="card">
  <div class="card-header">
    <h3> Nova Categoria </h3>
  </div>
  <div class="card-body">

    <form class="" action="/admin/categorias/nova" method="post">
      <label for="nome"> Nome: </label>
        <input class="form-control" type="text" name="nome" id="nome" placeholder="Nome da Categoria" required>
      <label for="slug"> Slug: </label>
        <input class="form-control" type="text" name="slug" id="slug" placeholder="Slug da Categoria" required>
      <button class="btn btn-success" type="submit" name="button"> Criar Categoria </button>
    </form>

  </div>
</div>
