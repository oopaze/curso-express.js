
<div class="card">
  <div class="card-header">
    <h3> Nova Categoria </h3>
  </div>

  <div class="card-body">
    <form class="" action="/admin/categorias/edit" method="post">
      <input type="hidden" name="id" value="{{categoria._id}}">
      <label for="nome"> Nome: </label>
        <input class="form-control" type="text" name="nome" id="nome" placeholder="Nome da Categoria" value="{{categoria.nome}}" required>
      <label for="slug"> Slug: </label>
        <input class="form-control" type="text" name="slug" value="{{categoria.slug}}" id="slug" placeholder="Slug da Categoria" value="{{categoria.nome}}" required>
      <button class="btn btn-success" type="submit" name="button"> Criar Categoria </button>
    </form>
  </div>
</div>
