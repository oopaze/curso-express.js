{{#each erros}}
  <div class="alert alert-danger">
    {{texto}}
  </div>
{{else}}

{{/each}}

<div class="card">
  <div class="card-header">
    <h3> Nova Postagem </h3>
  </div>
  <div class="card-body" style="padding: 20px 10%;">
    <form class="" action="/admin/postagens/nova" method="post">
      <label for="titulo">Titulo: </label>
      <input type="text" name="titulo" value="" class="form-control" required>

      <label for="slug"> Slug: </label>
      <input type="text" name="slug" value="" class="form-control" required>

      <label for="descricao"> Descrição: </label>
      <input type="text" name="descricao" value="" class="form-control" required>

      <label for="conteudo"> Conteudo: </label>
      <textarea name="conteudo" rows="8" cols="80" class="form-control" required></textarea>

      <label for="categoria">Categoria: </label>
      <select class="form-control" name="categoria">
        {{#each categorias}}
          <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nenhuma Categoria Registrada</option>
        {{/each}}
      </select>

      <button type="submit" name="button" class="btn btn-success mt-3"> Cria Postagem </button>
    </form>
  </div>
</div>
